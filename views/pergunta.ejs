<%- include ('./partials/header.ejs'); %>
<body>
    <%- include ('./partials/navbar.ejs'); %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %> </h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
            <h4>Resposta:</h4>
            <textarea placeholder="Digite sua resposta" class="form-control textopergunta mt-3" name="corpo"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary corbtn mt-3">Responder</button>




        </form>

        <hr>

       <section id="respostas">
        <h3>Respostas:</h3>
        <hr>

        <% repostas.forEach(resposta =>{%>
            <div class="card mt-3">
                <div class="card-body"><%= resposta.corpo %></div>
            </div>

        <%})%>
       </section>
    </div>
    
</body>
<%- include ('./partials/footer.ejs'); %>